<Window x:Class="Memory_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="960" Width="1080">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/background1.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" Padding="0,180,0,0" FontSize="32" VerticalAlignment="Bottom" Height="919" Margin="426,0" >Memory Game!</TextBlock>

        <Button Width="300" Height="100" FontSize="20" Click="BtnClickP1" Margin="0,0,0,0">Click to continue</Button>

        <Frame x:Name="Main" NavigationUIVisibility="Hidden"  />
    </Grid>
</Window>
